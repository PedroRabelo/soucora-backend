generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  login       String
  password    String
  name        String
  email       String  @unique
  role        Role    @default(USER)
  activateKey String
  active      Boolean @default(false)

  @@map("users")
}

enum Role {
  ADMIN
  USER
  COMPANY_USER
  PROFESSIONAL
  MEMBER
}
